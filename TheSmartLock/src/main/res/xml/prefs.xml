<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Enable Night Mode">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="NOGHT"
            android:summaryOff="Night mode is activated"
            android:summaryOn="Night mode is activated"
            android:title="Night Mode" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Screen Orientataion">

        <ListPreference
            android:defaultValue="false"
            android:key="ORIENTATAION"
            android:entries="@array/items_menu"
            android:entryValues="@array/items_value"
            android:title="orientataion" />



    </PreferenceCategory>




</PreferenceScreen>